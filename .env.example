# =============================================================================
# Modernized EspoCRM - Environment Configuration
# =============================================================================
# Copy this file to .env and adjust values as needed.
# Default values work for local development with Docker Compose.
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_DB=espocrm
POSTGRES_USER=espocrm
POSTGRES_PASSWORD=espocrm

# -----------------------------------------------------------------------------
# EspoCRM Backend Configuration
# -----------------------------------------------------------------------------
ESPOCRM_DATABASE_HOST=espocrm-db
ESPOCRM_DATABASE_USER=espocrm
ESPOCRM_DATABASE_PASSWORD=espocrm
ESPOCRM_DATABASE_NAME=espocrm

# Initial admin credentials (only used on first setup)
ESPOCRM_ADMIN_USERNAME=admin
ESPOCRM_ADMIN_PASSWORD=admin123

# Site URL (used for generating links, redirects, etc.)
ESPOCRM_SITE_URL=http://localhost:9000/classic

# -----------------------------------------------------------------------------
# React Frontend Configuration
# -----------------------------------------------------------------------------
VITE_API_BASE_URL=http://localhost/classic

# -----------------------------------------------------------------------------
# Optional: Production Settings
# -----------------------------------------------------------------------------
# Uncomment and configure for production deployments

# ESPOCRM_SITE_URL=https://your-domain.com
# VITE_API_BASE_URL=https://your-domain.com
