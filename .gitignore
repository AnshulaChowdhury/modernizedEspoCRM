# =============================================================================
# Modernized EspoCRM - Git Ignore
# =============================================================================

# -----------------------------------------------------------------------------
# Environment & Secrets
# -----------------------------------------------------------------------------
.env
.env.local
.env.*.local
*.pem
*.key

# -----------------------------------------------------------------------------
# Dependencies
# -----------------------------------------------------------------------------
node_modules/
vendor/

# -----------------------------------------------------------------------------
# Build Output
# -----------------------------------------------------------------------------
dist/
build/
*.min.js
*.min.css

# -----------------------------------------------------------------------------
# EspoCRM Runtime Data
# -----------------------------------------------------------------------------
services/espocrm/data/cache/
services/espocrm/data/logs/
services/espocrm/data/upload/
services/espocrm/data/tmp/
services/espocrm/data/config.php
services/espocrm/data/config-internal.php
services/espocrm/data/.data

# Keep empty data directories
!services/espocrm/data/cache/.gitkeep
!services/espocrm/data/logs/.gitkeep
!services/espocrm/data/upload/.gitkeep
!services/espocrm/data/tmp/.gitkeep

